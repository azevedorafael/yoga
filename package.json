{
  "scripts": {
    "commit": "git-cz",
    "test": "lerna run test --stream",
    "prettier": "prettier",
    "dev:web": "lerna run dev --scope=@gympass/doc --stream",
    "dev:native:android": "lerna run android --scope=@gympass/labnative --stream",
    "dev:native:ios": "lerna run ios --scope=@gympass/labnative --stream",
    "lint": "eslint",
    "lint:design-system": "yarn lint packages/design-system",
    "lint:doc": "yarn lint packages/doc",
    "lint:labnative": "yarn lint packages/labnative",
    "lint:tokens": "yarn lint packages/tokens",
    "lint:all": "yarn lint:design-system && yarn lint:doc && yarn lint:labnative && yarn lint:tokens"
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@react-native-community",
      "**/@react-native-community/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
